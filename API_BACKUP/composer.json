{
    "name": "dentwizard/api",
    "description": "PHP 5.6 Compatible E-commerce API",
    "type": "project",
    "require": {
        "php": ">=5.6.0",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "API\\": "src/"
        },
        "files": [
            "config/database.php",
            "config/cors.php",
            "middleware/auth.php"
        ]
    },
    "config": {
        "platform": {
            "php": "5.6.40"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-compatibility": "php -l **/*.php"
    }
}
