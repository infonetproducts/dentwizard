# DentWizard React App Environment Variables

# API Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
# For production: REACT_APP_API_URL=https://dentwizard.lgstore.com/lg/API/v1

# Azure AD Configuration (Replace with your actual values from IT team)
REACT_APP_AZURE_CLIENT_ID=your-client-id-here
REACT_APP_AZURE_TENANT_ID=your-tenant-id-here
REACT_APP_AZURE_REDIRECT_URI=http://localhost:3000
# For production: REACT_APP_AZURE_REDIRECT_URI=https://your-app.onrender.com

# Application Settings
REACT_APP_APP_NAME=DentWizard Store
REACT_APP_COMPANY_NAME=Dent Wizard
REACT_APP_MAX_BUDGET=10000
REACT_APP_CURRENCY=USD

# Feature Flags
REACT_APP_ENABLE_GIFT_CARDS=true
REACT_APP_ENABLE_PROMO_CODES=true
REACT_APP_ENABLE_BUDGET_CHECK=true

# Development Settings
REACT_APP_DEV_MODE=true
REACT_APP_MOCK_AUTH=false
